<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baatcheet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.Baatcheet"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.GroupChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.chatActivity"
            android:exported="false"
            android:theme="@style/Theme.Baatcheet.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.SetupProfileActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.OTPActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible">

        </activity>
        <activity
            android:name=".Activities.phoneNumberActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_send" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/green" />




    </application>

</manifest>